doctype html
html(lang = "en")
  head
    meta(charset = "utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    title Polar Area Calculator
    
    link(href = "./bower_components/font-awesome/css/font-awesome.min.css" rel = "stylesheet" type = "text/css")
    link(href = "./public/dist/main.css" rel = "stylesheet" type = "text/css")
    script(type = "text/javascript" async src = "./bower_components/MathJax/MathJax.js?config=TeX-MML-AM_CHTML")
    script(src = "./bower_components/jquery/dist/jquery.min.js")
    script(src = "./bower_components/mathjs/dist/math.min.js")
    script(src = "./public/dist/index.min.js")
  body
    center#mobile(hidden) Please use the desktop to view this app.
    image#loading(src = "public/graphics/loading_apple.gif" hidden)
    #wrapper
      #sidebar
        h2 Equation to graph:
        p (In terms of θ)
        br
        #expressionwrapper
          p r = 
          input#expression(type = "text" onkeyup="updateInput(this.value, '#expression')")
        #boundswrapper
          input#lowerbound.bound(type = "text" value = "0" onkeyup = "updateInput(this.value, '#lowerbound')")
          p#theta ≤&nbsp; θ	&nbsp;≤
          input#upperbound.bound(type = "text" value = "2π" onkeyup = "updateInput(this.value, '#upperbound')")
          p#steptext Step size: 
          input#step(type = "text" value = "0.01") 
        button#button(onclick = "submitEquation()") Plot Equation
        br
        p#error(hidden) This is an error
        br
        br
        h2 Integral Representation
        p (Select a zone on the graph to see its integral representation and value)
        br
        #integralrepresentation
          p 
        br
        h2 Coordinates
        p (Hover over a point on the graph to see the polar and rectangular coordinate)
        br
        #coordinates(hidden)
          p Polar: (
            span#polar
            |)
          p Rectangular: (
            span#rectangular
            |)
        br
        #credits
          p Project by Jeffrey Shen (See the source code <a href = "https://github.com/jeffreyshen19/Polar-Area-Calculator">here</a>)
      #graph
        canvas#graphCanvas(width = "500" height = "500")
      #zoomControl(hidden)
        i.fa.fa-fw.fa-search-plus#zoomIn(onclick = "zoomIn()")
        i.fa.fa-fw.fa-search-minus#zoomOut(onclick = "zoomOut()")
          
